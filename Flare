int speed = 0;
int gravity = 1;
int h = 200;

void setup() {
  fullScreen();
  frameRate(60);
  
}

void draw() {
  background(color(120));
  ellipse(width/2, h, 200, 200);
  speed = speed + gravity;
  h = h + speed;
  if (h > height-100) {
    h = height-100;
    speed = -1 * speed;
  }
  loop();
}
